<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="115dp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:text="TextView"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvAssignmentTitle"
            android:text="@string/notification_title"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvAssignmentMessage"
            android:text="@string/notification_message"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/ibarchive"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@mipmap/ic_archive"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tvTitle"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/ibview"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/ibarchive"
        android:layout_marginBottom="8dp"
        android:text="View"
        android:textStyle="bold"
        android:textSize="20dp"/>

</RelativeLayout>